<Page xmlns="http://schemas.natiescript.org/tns.xsd" actionBarHidden="true" loaded="startup">
  <GridLayout columns="*" rows="4*, 1*, 1*, 1*, 1*">

    <Label col="0" row="0" textWrap="true" text="[[ title ]]"/>
    
    
    <Button col="0" row="1" tap="singleModTap" text="[[ singleMode ]]" />
    <Button col="0" row="3" tap="localModeTap" text="[[ localMode ]]" />
    <Button col="0" row="2" tap="serverModeTap" text="[[ serverMode ]]"/>

    
    <GridLayout col="0" row="4" columns="50*, 50*" rows="*" >
    
      <Button col="0" row="0" tap="" text="[[ rules ]]" />
      <Button col="1" row="0" tap="" text="[[ language ]]" />
    
    </GridLayout>

  </GridLayout>
</Page>
